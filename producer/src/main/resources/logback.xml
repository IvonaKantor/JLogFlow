<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">

       <!-- <filter class="org.jlog.flow.filter.FilterLogger" /> -->

        <encoder>
            <pattern>
                PIZDEC %-4relative [%thread] %-5level %logger -%kvp -%msg%n
            </pattern>
        </encoder>
    </appender>

    <root>
        <appender-ref ref="STDOUT" />
    </root>
</configuration>